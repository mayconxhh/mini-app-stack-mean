// Imports
@import "./random/bootstrap.min.css"
@import "./font/style.styl"

* 
	margin 0
	padding 0
	font-size 16px
	font-family 'Roboto', sans-serif !important
	
// Style web
.Container
	width 100%
	margin 0
	padding 0
	&__title
		width 100%
		padding 1em
		box-sizing border-box
		background-color  #337ab7
		h1
			color white
			padding 0
			margin 0 
	&__form
		padding 1em
		box-sizing border-box
		width 100%
		max-width 600px
		border-radius 5px
		background-color #eaeaea
		margin 1em auto
		&--title
			padding .5em
			text-align center
			margin 0
		.radioButtons
			text-align center
		.buttons
			text-align center
			button
				padding .3em 2em
	&__list
		box-sizing border-box
		width 100%
		max-width 600px
		border-radius 5px
		background-color #d7f2ff
		margin 1em auto
		padding 1em
		.List
			border-bottom 1px solid #00adff
			padding .3em
		// a
		.linkIcons
			margin 0 2px
			box-sizing border-box
			text-decoration none
			color inherit
			&:hover
				text-decoration none
				color inherit
		.text
			margin 0 .5em
		.icons
			cursor pointer
	&__options
		box-sizing border-box
		width 100%
		max-width 600px
		margin 1em auto